---
// Logique côté serveur (optionnelle)
const title = "Générateur SVG";
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="fr" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
</head>
<body class="bg-gray-900">
    <div class="h-screen flex flex-col">
        <!-- Navigation horizontale en haut -->
        <nav class="bg-gray-800 shadow-lg border-b border-gray-700">
            <div class="px-6 py-3">
                <div class="flex space-x-8">
                    <a href="/" class="text-gray-300 hover:text-violet-400 font-medium transition-colors">Home</a>
                    <a href="/generator" class="text-violet-400 font-medium border-b-2 border-violet-500 pb-1">Generator</a>
                    <a href="/library" class="text-gray-300 hover:text-violet-400 font-medium transition-colors">Library</a>
                </div>
            </div>
        </nav>
        
        <!-- Zone principale avec disposition moderne -->
        <div class="flex-1 flex bg-gradient-to-br from-gray-900 via-purple-900 to-violet-900 p-4 gap-4 min-h-0">
            
            <!-- Première div : Affichage du SVG (panneau gauche) -->
            <div class="w-1/2 bg-gray-800 rounded-2xl shadow-xl border border-gray-700 flex flex-col">
                <div class="px-4 py-2 border-b border-gray-700 bg-gray-750 rounded-t-2xl">
                    <h2 class="text-sm font-semibold text-violet-300 flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                        Aperçu SVG
                    </h2>
                </div>
                
                <!-- Zone d'affichage SVG -->
                <div class="flex-1 p-4 flex items-center justify-center bg-gray-800 min-h-0">
                    <div id="svg-container" class="bg-gray-900 rounded-lg shadow-inner border border-gray-600 p-4 w-full h-full flex items-center justify-center">
                        <svg width="250" height="160" xmlns="http://www.w3.org/2000/svg" class="shadow-lg">
                            <!-- SVG avec couleurs violettes -->
                            <defs>
                                <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
                                    <stop offset="0%" style="stop-color:#8b5cf6;stop-opacity:1" />
                                    <stop offset="100%" style="stop-color:#7c3aed;stop-opacity:1" />
                                </linearGradient>
                            </defs>
                            <rect x="20" y="20" width="210" height="120" fill="url(#grad1)" stroke="#7c3aed" stroke-width="3" rx="15"/>
                            <circle cx="125" cy="80" r="30" fill="#a78bfa" fill-opacity="0.8" stroke="#8b5cf6" stroke-width="2"/>
                            <polygon points="110,60 140,60 125,40" fill="#c4b5fd" stroke="#a78bfa" stroke-width="2"/>
                            <text x="125" y="88" text-anchor="middle" fill="white" font-family="Arial" font-size="12" font-weight="bold">SVG</text>
                        </svg>
                    </div>
                </div>
                
                <!-- Stats en bas -->
                <div class="px-4 py-2 bg-gray-750 border-t border-gray-700 rounded-b-2xl">
                    <div class="flex justify-between text-xs text-gray-400">
                        <span>250×160px</span>
                        <span>4 éléments</span>
                        <span>1.1 KB</span>
                    </div>
                </div>
            </div>
            
            <!-- Deuxième div : Affichage du code généré (panneau droit) -->
            <div class="w-1/2 bg-black rounded-2xl shadow-xl border border-gray-800 flex flex-col">
                <div class="px-4 py-2 border-b border-gray-800 flex items-center justify-between rounded-t-2xl bg-gray-900">
                    <div class="flex items-center gap-2">
                        <div class="w-2 h-2 bg-red-500 rounded-full"></div>
                        <div class="w-2 h-2 bg-yellow-500 rounded-full"></div>
                        <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                        <span class="ml-3 text-gray-400 text-xs flex items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
                            </svg>
                            Code généré
                        </span>
                    </div>
                    <div class="flex gap-2">
                        <button class="px-2 py-1 bg-violet-600 hover:bg-violet-700 text-white text-xs rounded transition-colors">Copy</button>
                        <button class="px-2 py-1 bg-violet-600 hover:bg-violet-700 text-white text-xs rounded transition-colors">Download</button>
                    </div>
                </div>
                
                <!-- Zone de code -->
                <div class="flex-1 p-4 min-h-0">
                    <pre id="svg-output" class="text-xs text-gray-300 leading-tight h-full"><code>&lt;<span class="text-violet-400">svg</span> <span class="text-purple-400">width</span>=<span class="text-yellow-400">"250"</span> <span class="text-purple-400">height</span>=<span class="text-yellow-400">"160"</span> <span class="text-purple-400">xmlns</span>=<span class="text-yellow-400">"http://www.w3.org/2000/svg"</span>&gt;
  &lt;<span class="text-violet-400">defs</span>&gt;
    &lt;<span class="text-violet-400">linearGradient</span> <span class="text-purple-400">id</span>=<span class="text-yellow-400">"grad1"</span> <span class="text-purple-400">x1</span>=<span class="text-yellow-400">"0%"</span> <span class="text-purple-400">y1</span>=<span class="text-yellow-400">"0%"</span> <span class="text-purple-400">x2</span>=<span class="text-yellow-400">"100%"</span> <span class="text-purple-400">y2</span>=<span class="text-yellow-400">"100%"</span>&gt;
      &lt;<span class="text-violet-400">stop</span> <span class="text-purple-400">offset</span>=<span class="text-yellow-400">"0%"</span> <span class="text-purple-400">style</span>=<span class="text-yellow-400">"stop-color:#8b5cf6;stop-opacity:1"</span> /&gt;
      &lt;<span class="text-violet-400">stop</span> <span class="text-purple-400">offset</span>=<span class="text-yellow-400">"100%"</span> <span class="text-purple-400">style</span>=<span class="text-yellow-400">"stop-color:#7c3aed;stop-opacity:1"</span> /&gt;
    &lt;/<span class="text-violet-400">linearGradient</span>&gt;
  &lt;/<span class="text-violet-400">defs</span>&gt;
  
  &lt;<span class="text-violet-400">rect</span> <span class="text-purple-400">x</span>=<span class="text-yellow-400">"20"</span> <span class="text-purple-400">y</span>=<span class="text-yellow-400">"20"</span> <span class="text-purple-400">width</span>=<span class="text-yellow-400">"210"</span> <span class="text-purple-400">height</span>=<span class="text-yellow-400">"120"</span> 
       <span class="text-purple-400">fill</span>=<span class="text-yellow-400">"url(#grad1)"</span> <span class="text-purple-400">stroke</span>=<span class="text-yellow-400">"#7c3aed"</span> <span class="text-purple-400">rx</span>=<span class="text-yellow-400">"15"</span>/&gt;
  
  &lt;<span class="text-violet-400">circle</span> <span class="text-purple-400">cx</span>=<span class="text-yellow-400">"125"</span> <span class="text-purple-400">cy</span>=<span class="text-yellow-400">"80"</span> <span class="text-purple-400">r</span>=<span class="text-yellow-400">"30"</span> 
          <span class="text-purple-400">fill</span>=<span class="text-yellow-400">"#a78bfa"</span> <span class="text-purple-400">stroke</span>=<span class="text-yellow-400">"#8b5cf6"</span>/&gt;
  
  &lt;<span class="text-violet-400">polygon</span> <span class="text-purple-400">points</span>=<span class="text-yellow-400">"110,60 140,60 125,40"</span> 
           <span class="text-purple-400">fill</span>=<span class="text-yellow-400">"#c4b5fd"</span> <span class="text-purple-400">stroke</span>=<span class="text-yellow-400">"#a78bfa"</span>/&gt;
  
  &lt;<span class="text-violet-400">text</span> <span class="text-purple-400">x</span>=<span class="text-yellow-400">"125"</span> <span class="text-purple-400">y</span>=<span class="text-yellow-400">"88"</span> <span class="text-purple-400">text-anchor</span>=<span class="text-yellow-400">"middle"</span> 
        <span class="text-purple-400">fill</span>=<span class="text-yellow-400">"white"</span> <span class="text-purple-400">font-size</span>=<span class="text-yellow-400">"12"</span>&gt;SVG&lt;/<span class="text-violet-400">text</span>&gt;
&lt;/<span class="text-violet-400">svg</span>&gt;</code></pre>
                </div>
            </div>
        </div>
        
        <!-- Troisième div : Textarea + Button pour le prompt (barre en bas) -->
        <div class="bg-gray-800 border-t border-gray-700 shadow-xl p-4">
            <div class="max-w-6xl mx-auto">
                <div class="flex items-start gap-4">
                    <div class="flex items-center gap-2 pt-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                        <span class="text-sm font-medium text-gray-300">Prompt :</span>
                    </div>
                    
                    <!-- Textarea pour le prompt -->
                    <textarea 
                        id="user-prompt"
                        class="flex-1 px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-gray-200 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:border-violet-500 resize-none h-16" 
                        placeholder="Décrivez le SVG que vous souhaitez générer : un logo avec un cercle violet, un triangle et du texte..."
                    ></textarea>
                    
                    <!-- Bouton de génération -->
                    <button id="generate-button" class="px-6 py-2 bg-gradient-to-r from-violet-600 to-purple-600 hover:from-violet-700 hover:to-purple-700 text-white font-medium rounded-lg transition-all duration-200 shadow-lg hover:shadow-violet-500/25 flex items-center gap-2 h-16">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                        </svg>
                        Générer SVG
                    </button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script>
    //@ts-nocheck
	
	async function generateSVG(prompt) {
		console.log('Generating SVG for prompt:', prompt);
		const res = await fetch('/api/generateSVG', {
			method: 'POST',
			headers: { 'Content-Type': 'application/json' },
			body: JSON.stringify({ prompt }),
		});
		const data = await res.json();
		return data.svg;
	}

	async function handleSubmit() {
        let prompt = "";
        let svgCode = "";
        const promptElement = document.getElementById("user-prompt");
        prompt = promptElement ? promptElement.value : "";
        console.log('submitted: ', prompt); // message affiché sur votre console d'inspecteur dans le navigateur
        const svgContainer = document.getElementById("svg-container");
        let svgOutput = document.getElementById("svg-output");
        svgCode = await generateSVG(prompt);
        console.log('svgCode: ', svgCode);
        svgOutput.textContent = svgCode;
        svgContainer.innerHTML = `<span class="loading loading-ring loading-xl"></span>`;
        generateButton.disabled = true;
	}
    const generateButton = document.getElementById("generate-button");
	if (generateButton) {
		generateButton.addEventListener("click", handleSubmit);
	}
</script>