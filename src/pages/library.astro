---
const title = "Bibliothèque SVG";
import "../styles/global.css";
import PocketBase from 'pocketbase';

// Récupération des SVG depuis PocketBase côté serveur
let svgs = [];
try {
    const pb = new PocketBase(import.meta.env.POCKETBASE_URL);
    const records = await pb.collection('svg_creations').getList(1, 50, {
        sort: '-created',
    });
    svgs = records.items;
} catch (error) {
    console.error('Erreur lors de la récupération des SVG:', error);
}
---

<!DOCTYPE html>
<html lang="fr" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
</head>
<body class="bg-gray-900">
    <div class="min-h-screen flex flex-col">
        <!-- Navigation horizontale en haut -->
        <nav class="bg-gray-800 shadow-lg border-b border-gray-700">
            <div class="px-6 py-3">
                <div class="flex space-x-8">
                    <a href="/" class="text-gray-300 hover:text-violet-400 font-medium transition-colors">Home</a>
                    <a href="/generator" class="text-gray-300 hover:text-violet-400 font-medium transition-colors">Generator</a>
                    <a href="/library" class="text-violet-400 font-medium border-b-2 border-violet-500 pb-1">Library</a>
                </div>
            </div>
        </nav>
        
        <!-- Contenu principal -->
        <div class="flex-1 bg-gradient-to-br from-gray-900 via-purple-900 to-violet-900 p-6">
            <div class="max-w-7xl mx-auto">
                <div class="mb-8">
                    <h1 class="text-4xl font-bold text-white mb-2">{title}</h1>
                    <p class="text-gray-300">Parcourez la collection de SVG générés</p>
                </div>

                <!-- Grille des SVG avec rendu côté serveur -->
                {svgs.length > 0 ? (
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        {svgs.map(svg => (
                            <div class="card bg-gray-800 shadow-xl p-4 rounded-xl border border-gray-700">
                                <h2 class="text-lg font-bold text-white mb-2">{svg.title}</h2>
                                <div class="border border-gray-600 p-2 mt-2 bg-gray-900 rounded-lg min-h-[200px] flex items-center justify-center" set:html={svg.svg_code}></div>
                                <div class="mt-3">
                                    <p class="text-gray-400 text-sm truncate">{svg.prompt}</p>
                                    <div class="flex justify-between items-center mt-2">
                                        <span class="text-xs text-gray-500">Par: {svg.created_by || 'Anonyme'}</span>
                                        <span class="text-xs text-gray-500">{svg.tags}</span>
                                    </div>
                                </div>
                            </div>
                        ))}
                    </div>
                ) : (
                    <!-- Message si vide -->
                    <div class="text-center py-12">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 mx-auto mb-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                        </svg>
                        <h3 class="text-xl font-semibold text-white mb-2">Aucun SVG trouvé</h3>
                        <p class="text-gray-400 mb-4">Commencez par créer votre premier SVG !</p>
                        <a href="/generator" class="inline-block px-6 py-3 bg-violet-600 hover:bg-violet-700 text-white rounded-lg transition-colors">
                            Créer un SVG
                        </a>
                    </div>
                )}
            </div>
        </div>
    </div>
</body>
</html>