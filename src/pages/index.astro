---
import Layout from "../layouts/Layout.astro";
import { ui, defaultLang } from '../i18n/ui.js';

// Récupération de la langue actuelle
const currentLanguage = Astro.cookies.get("language")?.value || defaultLang;
const locale = (Object.keys(ui).includes(currentLanguage) ? currentLanguage : defaultLang) as keyof typeof ui;
---

<Layout currentPage="home">
    <div class="hero min-h-screen bg-gradient-to-br from-base-200 via-primary/10 to-secondary/20">
        <div class="hero-content text-center max-w-5xl mx-auto">
            <div>
                <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-base-content mb-4 sm:mb-6">
                    {ui[locale].index.title}
                </h1>
                <p class="text-sm sm:text-base md:text-lg lg:text-xl text-base-content/70 mb-6 sm:mb-8 leading-relaxed max-w-3xl mx-auto px-4">
                    {ui[locale].index.description}
                </p>
                
                <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center items-center">
                    <a href="/generator" class="btn btn-primary btn-lg w-full sm:w-auto">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                        </svg>
                        {ui[locale].index.button}
                    </a>
                    
                    <a href="/library" class="btn btn-secondary btn-lg w-full sm:w-auto">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                        </svg>
                        <span class="hidden sm:inline">{ui[locale].nav.gallery}</span>
                        <span class="sm:hidden">{ui[locale].nav.gallery}</span>
                    </a>
                </div>
                
                <!-- Section de fonctionnalités -->
                <div class="mt-12 sm:mt-16 grid grid-cols-1 md:grid-cols-3 gap-6 sm:gap-8">
                    <div class="card bg-base-100 shadow-xl">
                        <div class="card-body items-center text-center p-4 sm:p-6">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-primary mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                            </svg>
                            <h3 class="card-title text-base sm:text-lg">{ui[locale].index.features.ai}</h3>
                            <p class="text-xs sm:text-sm text-base-content/70">{ui[locale].index.features.aiDesc}</p>
                        </div>
                    </div>
                    
                    <div class="card bg-base-100 shadow-xl">
                        <div class="card-body items-center text-center p-4 sm:p-6">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-secondary mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                            </svg>
                            <h3 class="card-title text-base sm:text-lg">{ui[locale].index.features.interface}</h3>
                            <p class="text-xs sm:text-sm text-base-content/70">{ui[locale].index.features.interfaceDesc}</p>
                        </div>
                    </div>
                    
                    <div class="card bg-base-100 shadow-xl">
                        <div class="card-body items-center text-center p-4 sm:p-6">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-accent mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
                            </svg>
                            <h3 class="card-title text-base sm:text-lg">{ui[locale].index.features.export}</h3>
                            <p class="text-xs sm:text-sm text-base-content/70">{ui[locale].index.features.exportDesc}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>