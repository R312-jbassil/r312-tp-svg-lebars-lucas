---
if (Astro.locals.user) {
    return Astro.redirect("/");
}
---
<html lang="en" data-theme="light">
    <head>
        <meta charset="UTF-8" />
        <title>Signup</title>
        <meta name="viewport" content="width=device-width" />
        <link href="https://cdn.jsdelivr.net/npm/daisyui@3.8.0/dist/full.css" rel="stylesheet" type="text/css" />
    </head>
    <body class="min-h-screen flex items-center justify-center bg-base-200">
        <div class="card w-full max-w-md shadow-xl bg-base-100">
            <div class="card-body">
                <h1 class="card-title text-3xl mb-4 justify-center">Inscription</h1>
                <!-- Formulaire d'inscription -->
                <form id="signup-form" class="flex flex-col gap-4">
                    <input type="email" name="email" placeholder="Email" required class="input input-bordered" />
                    <input type="password" name="password" placeholder="Mot de passe" required class="input input-bordered" />
                    <button type="submit" class="btn btn-primary w-full">S'inscrire</button>
                </form>
                <!-- Zone d'affichage du statut -->
                <p id="status" class="mt-4 text-center text-error"></p>
                <div class="mt-2 text-center">
                  <a href="/login" class="link link-primary">Déjà un compte ? Se connecter</a>
                </div>
            </div>
        </div>
    </body>
</html>

<script>
    //@ts-nocheck
    const form = document.getElementById("signup-form");
    const status = document.getElementById("status");

    form.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(form);
        status.textContent = "";
        // Envoi des informations au serveur via l'API /api/signup
        const res = await fetch("/api/signup", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
                email: formData.get("email"),
                password: formData.get("password"),
            }),
        });
        if (res.ok) {
            status.textContent = "✅ Inscription réussie ! Redirection...";
            setTimeout(() => {
                window.location.href = "/login";
            }, 1200);
        } else {
            const data = await res.json();
            status.textContent = "❌ " + (data.error || "Erreur lors de l'inscription");
        }
    });
</script>
